<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xyz.ideasubmission.admin.AdminActivity"
    tools:showIn="@layout/activity_admin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:padding="5dp"
        android:elevation="8dp"
        android:id="@+id/newUser"
        android:text="Add New User"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#757575"
        android:textColor="#fcfbfb"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="5dp"
        android:elevation="8dp"
        android:layout_below="@id/newUser"
        android:id="@+id/managepost"
        android:text="Manage Post"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#757575"
        android:textColor="#fcfbfb"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/managepost"
        android:id="@+id/userlist"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
